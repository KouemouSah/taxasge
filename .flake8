[flake8]
# TaxasGE Backend - Flake8 Configuration
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    tests,
    scripts,
    node_modules,
    .github,
    config

ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501   # line too long (handled by max-line-length)

# Select specific error codes to check
select = 
    E,     # pycodestyle errors
    W,     # pycodestyle warnings  
    F,     # pyflakes
    C90    # mccabe complexity

max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    main.py:E402
    scripts/*.py:E402

# Statistics and formatting
statistics = True
count = True
show-source = True

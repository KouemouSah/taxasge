[flake8]
# TaxasGE Backend - Flake8 Configuration (CORRECTED)
max-line-length = 127

exclude = 
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    tests,
    scripts,
    node_modules,
    .github,
    config

# Fixed ignore codes - removed comments causing errors
ignore = 
    E203,
    W503,
    E501

# Select specific error codes to check
select = 
    E,
    W,
    F,
    C90

max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    main.py:E402
    scripts/*.py:E402

# Statistics and formatting
statistics = True
count = True
show-source = True
